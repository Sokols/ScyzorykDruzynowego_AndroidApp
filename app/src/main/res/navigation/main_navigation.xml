<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_people">

    <fragment
        android:id="@+id/navigation_people"
        android:name="pl.sokols.scyzorykdruzynowego.activities.main.ui.people.PeopleFragment"
        android:label="@string/people"
        tools:layout="@layout/fragment_people" >
        <action
            android:id="@+id/action_people_to_select"
            app:destination="@id/selectCreateTeamOrScoutFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:popEnterAnim="@anim/fragment_close_exit" />
    </fragment>

    <fragment
        android:id="@+id/navigation_todo"
        android:name="pl.sokols.scyzorykdruzynowego.activities.main.ui.todo.TodoFragment"
        android:label="@string/to_do_list"
        tools:layout="@layout/fragment_todo" />

    <fragment
        android:id="@+id/navigation_meetings"
        android:name="pl.sokols.scyzorykdruzynowego.activities.main.ui.meetings.MeetingsFragment"
        android:label="@string/meetings"
        tools:layout="@layout/fragment_meetings" />

    <fragment
        android:id="@+id/selectCreateTeamOrScoutFragment"
        android:name="pl.sokols.scyzorykdruzynowego.activities.main.ui.people.SelectCreateTeamOrScoutFragment"
        android:label="@string/choice"
        tools:layout="@layout/fragment_select_create_team_or_scout">
        <action
            android:id="@+id/action_select_to_new_team"
            app:destination="@id/createNewTeamFragment" />
        <action
            android:id="@+id/action_select_to_new_person"
            app:destination="@id/createNewPersonFragment" />
    </fragment>
    <fragment
        android:id="@+id/createNewTeamFragment"
        android:name="pl.sokols.scyzorykdruzynowego.activities.main.ui.people.CreateNewTeamFragment"
        android:label="@string/complete_data"
        tools:layout="@layout/fragment_create_new_team">
        <action
            android:id="@+id/action_new_team_to_people"
            app:destination="@id/navigation_people"
            app:popUpTo="@id/navigation_people"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/createNewPersonFragment"
        android:name="pl.sokols.scyzorykdruzynowego.activities.main.ui.people.CreateNewPersonFragment"
        android:label="@string/complete_data"
        tools:layout="@layout/fragment_create_new_person">
        <action
            android:id="@+id/action_new_person_to_people"
            app:destination="@id/navigation_people"
            app:popUpTo="@id/navigation_people"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>